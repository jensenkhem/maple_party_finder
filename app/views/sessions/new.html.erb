<%provide(:title, "Login")%>
<h1> Login </h1>
<div class='row'>
    <div class='col-md-6 col-md-offset-2' style='padding-top: 40px'>
        <div class='wrapper'>
            <%=form_for(:session, url: login_url) do |f|%>
                <%= f.label :username %>
                <%= f.text_field :username %>
                <%= f.label :password %>            
                <%= f.password_field :password %>
                <%= f.submit "Login", class: 'btn btn-primary'%>
            <%end%>
            <p> New user? <%=link_to("Sign up here", signup_path)%></p>
        </div>
    </div>
</div>
