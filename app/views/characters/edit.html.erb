<%provide(:title, "Edit character")%>
<h1> Edit character </h1>
<div class='row'>
    <div class='col-md-6 col-md-offset-2' style='padding-top: 40px'>
        <div class='wrapper'>
            <%=form_for(@character) do |f|%>
                <%=render 'shared/char_error_messages'%>
                <%= f.label :name %>
                <%= f.text_field :name %>
                <%= f.hidden_field :char_class, value: @character.char_class %>
                <%= hidden_field_tag 'selected', 'none'%>            
                <%= f.hidden_field :user_id, :value => current_user.id%>
                <%= hidden_field_tag 'selected', 'none'%>
                <%= f.label :level %>
                <%= f.number_field :level%>
                <%= f.label :stat, "Stat (Ex. 12.5 -> 12.5k)"%>
                <%= f.number_field :stat, step: 0.1%>
                <%= f.submit "Save changes", class: 'btn btn-primary'%>
            <%end%>
        </div>
    </div>
</div>
